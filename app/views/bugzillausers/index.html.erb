<p id="notice"><%= notice %></p>


<div class="w3-bar w3-large w3-theme-d4">
  <a href="#" class="w3-bar-item w3-button">
    <i class="fa fa-bars"></i></a>  
  <span class="w3-bar-item">Listing Bugzillausers</span>
  <a href="#" class="w3-bar-item w3-button w3-right">
    <i class="fa fa-search"></i></a>
</div>

<div class="w3-container w3-content">
      <% @bugzillausers.each do |bugzillauser| %>
        <div class="w3-panel w3-white w3-card-2 w3-display-container" >
                            <p><%= bugzillauser.loginname %></p>
                            <p><%= bugzillauser.realname %></p>
                            <p><%= bugzillauser.password %></p>
                            <p><%= bugzillauser.bugmaildisabled %></p>
                            <p><%= bugzillauser.disabletext %></p>
                            <p><%= bugzillauser.adminpermission %></p>
                            <p><%= bugzillauser.creategroupspermission %></p>
                            <p><%= bugzillauser.edituserspermission %></p>
                    
          
          <%= link_to 'Show', bugzillauser %>
          <%= link_to 'Edit', edit_bugzillauser_path(bugzillauser) %>
          <%= link_to 'Destroy', bugzillauser, method: :delete, data: { confirm: 'Are you sure?' } %>

        </div>
      <% end %>
</div>


